{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "outDir": "build",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/Windows/*",
    "src/Preload/*",
    "src/Server/*",
    "src/State/*"
  ],
  "exclude": [
    "src/Renderer"
  ]
}