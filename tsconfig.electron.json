{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "CommonJS",
      "skipLibCheck": true,
      "outDir": "out",
      "esModuleInterop": true,
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/main/*", "src/preload/*", "src/backend/*"],
  }
  